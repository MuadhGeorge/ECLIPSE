{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{VCPKG_ROOT}",
        "rhs": ""
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "desktop-debug",
      "displayName": "Desktop Debug",
      "description": "Debug build with symbols",
      "inherits": ["default", "vcpkg"],
      "binaryDir": "${sourceDir}/build/desktop-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "desktop-release",
      "displayName": "Desktop Release",
      "description": "Optimized release build",
      "inherits": ["default", "vcpkg"],
      "binaryDir": "${sourceDir}/build/desktop-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "web-release",
      "displayName": "Web Release (Emscripten)",
      "description": "WebAssembly build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/web-release",
      "toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PLATFORM_WEB": "ON"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "$env{EMSDK}",
        "rhs": ""
      }
    }
  ],
  "buildPresets": [
    {
      "name": "desktop-debug",
      "configurePreset": "desktop-debug"
    },
    {
      "name": "desktop-release",
      "configurePreset": "desktop-release"
    },
    {
      "name": "web-release",
      "configurePreset": "web-release"
    }
  ],
  "testPresets": [
    {
      "name": "desktop-debug",
      "configurePreset": "desktop-debug",
      "output": {"outputOnFailure": true}
    },
    {
      "name": "desktop-release",
      "configurePreset": "desktop-release",
      "output": {"outputOnFailure": true}
    }
  ]
}
