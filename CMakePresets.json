{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "name": "desktop-release",
      "displayName": "Desktop Release",
      "description": "Release build for desktop (Windows/Linux/macOS)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "desktop-debug",
      "displayName": "Desktop Debug",
      "description": "Debug build with symbols for development",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "web-release",
      "displayName": "Web Release (Emscripten)",
      "description": "WebAssembly build using Emscripten",
      "binaryDir": "${sourceDir}/build/web",
      "toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PLATFORM_WEB": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "desktop-release",
      "configurePreset": "desktop-release",
      "configuration": "Release"
    },
    {
      "name": "desktop-debug",
      "configurePreset": "desktop-debug",
      "configuration": "Debug"
    },
    {
      "name": "web-release",
      "configurePreset": "web-release",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "desktop-release",
      "configurePreset": "desktop-release",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "desktop-debug",
      "configurePreset": "desktop-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
